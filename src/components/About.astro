---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-slate-800">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-slate-100"
        >
          About Me
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl md:text-2xl leading-relaxed text-slate-300">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-4">
          <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
            {
              siteConfig.skills.map((skill) => (
                <div 
                  class="group relative w-16 h-16 flex items-center justify-center bg-slate-700 rounded-xl hover:bg-slate-600 transition-all duration-300 hover:scale-110 hover:shadow-lg cursor-pointer"
                  title={skill.name}
                >
                  <i 
                    class={`${skill.icon} text-2xl transition-all duration-300 group-hover:scale-110`}
                    style={`color: ${skill.color}`}
                  ></i>
                  
                  {/* Tooltip */}
                  <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-slate-800 text-slate-200 text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none whitespace-nowrap z-10">
                    {skill.name}
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
